; MODULES

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which 
they do by default.
; Default: true
pin-workspaces = true

; Output mode flags after focused state label
; Default: false
inline-mode = false

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Set the scroll cycle direction 
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;â™š will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

format = <label-state>

label-focused = " %name% "
label-occupied = " %name% "
label-empty = " %name% "
label-urgent = " %name% "

label-focused-foreground = ${colors.black}
label-occupied-foreground = ${colors.white}
label-empty-foreground = ${colors.yellow}
label-urgent-foreground = ${colors.green}

label-focused-background = ${colors.red}
label-occupied-background = ${colors.green}
label-empty-background = ${colors.green}
label-urgent-background = ${colors.red}

label-separator = " "
label-separator-padding = 0
label-separator-foreground = ${colors.foreground}
label-separator-background = ${colors.green}


[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4


[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %
%{...}
date = %a %b %d, 

; Optional time format
time = %H:%M
; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

label = %date% %time%
format = ï€—   <label>
format-background = ${colors.background}
;format-background = #88000000
;format-foreground = #333
format-padding = 0

